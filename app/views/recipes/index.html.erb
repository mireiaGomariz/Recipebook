<div class="container">
	<div class="row">
    <h1 class="text-center mt-5">√çndice de Recetas</h1>
      <div class="MultiCarousel" data-items="1,3,4,4,4" data-slide="1" id="MultiCarousel"  data-interval="1000">
          <div class="MultiCarousel-inner">
            <% @recipe.each do |rec| %>
                <div class="item ">
                  <div class="pad15">
                      <h4 class="lead"><%= link_to rec.title, rec%></h4>
                      <p><%= rec.ingredients.truncate_words(15) %></p>
                      <p><%= rec.elaboration.truncate_words(15) %></p>
                  </div>
                </div>
            <% end %>
          </div>
          <button class="btn btn-primary leftLst"><</button>
          <button class="btn btn-primary rightLst">></button>
       </div>
  </div>
</div>
